        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePickerDay"
        android:layout_toEndOf="@+id/editText3" />
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePickerMonth"
        android:layout_toEndOf="@+id/editText3" />
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePickerYear"
        android:layout_toEndOf="@+id/editText3" />
